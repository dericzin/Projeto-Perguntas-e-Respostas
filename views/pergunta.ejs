<%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1> <font color= "white"  </font> <%= pergunta.titulo %> </h1>
        <p>  <%= pergunta.descricao %> </p>
        <hr>
        <form method= "POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <%respostas.forEach(resposta=>{%>
           <div class= "card"> 
               <div class="card-body">
                 <p> <font color="black"> <%= resposta.corpo %> </font> </p>
               </div>
           </div>
       <% }) %>
    </div>
</body>
<%- include('./partials/footer.ejs') %>
